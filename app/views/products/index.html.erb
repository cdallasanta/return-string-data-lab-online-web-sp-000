<h1>Products</h1>
<ul>
  <% @products.each do |product| %>
    <li>
      <strong><%= product.name %></strong><br>
      <div id="product-<%= product.id %>-description">
        <%= truncate product.description %><button class="js-product-more" data-id=<%= product.id %>>More Info</button>
      </div>
    </li>
  <% end %>
</ul>
